{
  "name": "apps",
  "version": "0.1.0",
  "homepage": "https://csabagaspar.github.io/tomato-timer",
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "predeploy": "react-scripts build",
    "deploy": "gh-pages -d build",
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "react-scripts  test",
    "test:ci": "cross-env CI=true react-scripts test",
    "ci": "npm-run-all test:ci",
    "format": "prettier --write \"**/*.+(js|json|html|css)\"",
    "storybook": "start-storybook -p 9009 -s public --ci",
    "build-storybook": "build-storybook -s public",
    "upgrade:deps": "yarn upgrade --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addon-storyshots": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.1",
    "jest-dom": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "plop": "^2.3.0",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "react-test-renderer": "^16.8.4",
    "react-testing-library": "^6.0.0",
    "require-context.macro": "^1.0.4",
    "start-server-and-test": "^1.7.11"
  }
}
